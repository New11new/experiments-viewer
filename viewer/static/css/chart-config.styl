@import 'lib';

$control-height = 40px;

.chart-config {
  display: flex;
  height: $control-height;
  background-color: #000;
  background-image: radial-gradient(40% 728%, rgba(126, 211, 33, 0.3), #000000);
  box-shadow: 0 24px 7px -5px #000;
  margin: -20px 0 20px;
  padding: 10px 15px;
  justify-content: space-between;
  position: sticky;
  top: 0;
  z-index: 2;

  > * {
    align-self: flex-start;
  }
}

.dataset-config-content {
  display: flex;
  justify-content: space-between;
  margin: -10px 0 0 -15px;
  background-color: rgba(126, 211, 33, 0.3);
  border-radius: 4px;
  height: 40px;
  padding: 0 15px;

  > * {
    align-self: center;
  }
}

.dataset-populations {
  display: flex;
  align-self: center;
  height: $control-height;
  margin-top: -10px;

  > * {
    margin: 0 8px;
  }
}

.dataset-subgroups {
  margin: 0 5px 0 15px;
}

.dataset-control-wrapper {
  display: flex;
}

.switch-wrapper {
  font-size: $switch-font-size;
}

.cohort-counts {
  font-size: $switch-font-size;
}
