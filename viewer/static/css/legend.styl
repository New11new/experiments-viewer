@import 'lib';

$li-margin-bottom = $med-padding;

.legend {
  display: flex;
  font-size: 13px;
  height: 21px;
  justify-content: center;
  left: 0;
  margin: $lrg-padding 0;
  position: absolute;
  top: 0;
  width: 100%;

  ul {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    margin: 0;
    padding: 0;

    /* Compensate for the margin-bottom of the last row of li elements */
    margin-bottom: -($li-margin-bottom);
  }

  li {
    float: left;
    padding: 0 $med-padding;
    margin-bottom: $li-margin-bottom;

    /* Vertically-center lines and names */
    display: flex;
    align-items: center;
  }
}

.example-line {
  margin-right: $min-padding;
}
